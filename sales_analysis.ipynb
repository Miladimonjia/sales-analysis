import pandas as pd
import matplotlib.pyplot as plt

# Chargement des donn√©es
df = pd.read_csv("sales_data.csv")

# Aper√ßu
print(df.head())

# Calcul du chiffre d'affaires par ligne
df["Chiffre_affaires"] = df["Quantit√©"] * df["Prix_unitaire"]

# CA total
total_ca = df["Chiffre_affaires"].sum()
print(f"üí∞ Chiffre d'affaires total : {total_ca:.2f} ‚Ç¨")

# CA par cat√©gorie
ca_par_categorie = df.groupby("Cat√©gorie")["Chiffre_affaires"].sum()

# Visualisation
ca_par_categorie.plot(kind="bar", title="Chiffre d'affaires par cat√©gorie", color="skyblue")
plt.ylabel("‚Ç¨")
plt.show()
